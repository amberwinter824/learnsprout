{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/components/*": [
        "./app/components/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.d.ts",
    "next.config.mjs",
    "adminDevelopmentalSkillsSeeder.cjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "app/components/parent/ImprovedParentDashboard.tsx",
    "app/components/parent/MultiChildDailyDashboard.tsx",
    "app/components/VisualSkillProgress.tsx",
    "app/components/SimplifiedSkillsDashboard.tsx",
    "app/components/parent/SimplifiedWeeklyView.tsx",
    "app/components/QuickObservationForm.tsx",
    "app/dashboard/children/[id]/progress/page.js",
  ]
}
